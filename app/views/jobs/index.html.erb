<h1>My Jobs</h1>
<hr>
<% @jobs.each do |job| %>
    <%# <div class="d-flex justify-content-center row-cols-1 row-cols-md-2 g-4"> %>
    <%# <div class="col"> %>
      <%# <div class="card mb-3"> %>



<div class="d-flex justify-content-center">
  <div class="col">
    <div class="card mb-3">
      <h3 class="card-header">
        <%= job.title %>
      </h3>
      <%= image_tag job.documents.first, class: "card-img-top", style: "width: 100%; height: 50%;" %>
      <div class="card-body">
        <h4 class="card-title">$<%= job.price.to_i %></h4>
        <p class="card-text"><%= job.street_address %>, <%= job.suburb %>, <%= job.postcode %>, <%= job.state %></p>
        <p class="card-text">Payment Terms: <%= job.payment_terms %> days</p>
        <span class="badge bg-warning rounded-pill"><%= job.status %></span>
        <span class="badge bg-success rounded-pill"><%= "Successfully Completed" if job.successful? %></span>
        <span class="badge bg-success rounded-pill"><%= "Paid on Time" if job.paid_on_time %></span><br><br>
        <%= link_to "View Job", job_path(job.id), class:"btn btn-outline-primary" %>
        <% if job.status_open? %>
          <%= link_to 'Edit', edit_job_path(job), class: "btn btn-outline-dark btn-md" %>
          <%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure? All information associated with this job will be deleted including anything a tradie may have uploaded. This can not be undone' }, class: "btn btn-danger btn-md" %>
        <% elsif job.status_active? || job.status_verified? %>
          <%= link_to 'Cancel Job', edit_job_path(job), data: { confirm: 'Are you sure? This will cancel the job permanently. This does not null any prior agreements made with the other party. This can not be undone' }, class: "btn btn-outline-warning btn-md" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<% end %>