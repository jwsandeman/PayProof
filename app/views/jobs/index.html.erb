<p id="notice"><%= notice %></p>

<h1>Jobs</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Street address</th>
      <th>Suburb</th>
      <th>Postcode</th>
      <th>State</th>
      <th>Price</th>
      <th>Status</th>
      <th>Successful</th>
      <th>Paid on time</th>
      <th>Tradie</th>
      <th>Homeowner</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.title %></td>
        <td><%= job.description %></td>
        <td><%= job.street_address %></td>
        <td><%= job.suburb %></td>
        <td><%= job.postcode %></td>
        <td><%= job.state %></td>
        <td><%= job.price %></td>
        <td><%= job.status %></td>
        <td><%= job.successful %></td>
        <td><%= job.paid_on_time %></td>
        <td><%= job.tradie_id %></td>
        <td><%= job.homeowner_id %></td>
        <td><%= link_to 'Show', job %></td>
        <td><%= link_to 'Edit', edit_job_path(job) %></td>
        <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

