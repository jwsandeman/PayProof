
<%= simple_form_for(@job) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :street_address %>
    <%= f.input :suburb %>
    <%= f.input :postcode %>
    <%= f.input :state %>
    <%= f.input :price %>
    <%= f.association :homeowner_id %>
    <% if @job.status_active? %>
      <%= f.input :successful %>
      <%# need to figure out why this is still showing up %>
      <%= f.input :paid_on_time %>
    <% end %>
    <%= f.input :paid_on_time %>
    <%# These aren't needed and cause errors %>
    <%# <%= f.input :status %>
    <%# <%= f.association :tradie_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
