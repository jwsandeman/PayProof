<div class="d-flex justify-content-center">
  <div class="container">
  <br>
    <div class="row  align-items-center">
      <div class="col-md-auto">
        <% if @user.profile_pic.attached? %>
          <%= image_tag @user.profile_pic, class: "rounded-circle", style: "width: 160px; height: 160px;" %>
        <% else %>
          <img src="https://www.pngitem.com/pimgs/m/78-786293_1240-x-1240-0-avatar-profile-icon-png.png" alt="mdo" width="160" height="160" class="rounded-circle">
        <% end %>
      </div>
      <div class="col">
        <h1><%= @user.username %></h1>
        <em style="font-size: 24px;">@<%= @user.username %></em>
      </div>
    </div>
    <hr>
    <% if @user.bio %>
      <p><strong><%= @user.bio %></strong></p>
    <% end %>
    <div class="row">
      <div class="col">
        <p><strong>PayProof Score: </strong></p>
      </div>
      <div class="col">
        <% if @ratings.empty? %>
          <p><strong>User Rating:</strong> No reviews yet</p>
        <% else %>
          <h4>User Rating: <%= @ratings.sum.to_f / @ratings.count.to_f %>/5</h4>
          <p><em>Based on <%= @ratings.count %> review(s)</em></p>
        <% end %>
      </div>
    </div>
    <hr>
    <p><strong>Reviews:</strong></p>
    <% @user_reviews.each do |review| %>
      <%# <% if review.job.tradie == @user && review.user.id != @user.id %>
        <p><em><%= review.comment %></em></p>
        <h5><%= review.rating %>/5</h5>
      <%# <% elsif review.job.homeowner == @user && review.user.id != @user.id%>
        <%# <p><em><%= review.comment</em></p> %>
        <%# <h5><%= review.rating/5</h5> %>
      <%# <% end %>
    <% end %>

   

    <% if current_user.id == @user.id %>
        <%= link_to "Edit Profile", edit_user_registration_path, class: "btn btn-outline-primary btn-md" %>
    <% elsif current_user.tradie %>
        <%= link_to "View Open Jobs", profile_jobs_path, class: "btn btn-outline-primary btn-md" %>
    <% elsif !current_user.tradie %>
        <%= link_to "View Completed Jobs", profile_jobs_path, class: "btn btn-outline-primary btn-md" %>
    <% end %>

    <%= link_to "Back", :back, class: "btn btn-outline-dark btn-md" %>
  </div>
</div>
